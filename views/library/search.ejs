<%- include('../partials/header') %>

<% if (books) { %>
    <% books.forEach(function(book){ %>
        <div class="container-fluid">
            <div class="title">
                <h5 class="title"><%= book.volumeInfo.title %></h5>
                <h6>By <%= authorParser(book.volumeInfo.authors) %></h6>
            </div>
            <div class="row alert alert-light
            ">
                <div class="col-sm-2">
                    <img src="<%= imgParser(book.volumeInfo.imageLinks) %>" class="img img-responsive" size="200">
            </div>
            
                <div class="col-sm-7">
                    About:<br><br>
                    <p><%= book.volumeInfo.description %></p><br>
                    Published: <i><%= book.volumeInfo.publishedDate %></i>

                </div>
                <div class="col-sm-3 ">
                        <p>
                            <form id="add-book" action="/search/<%=book.id%>" method="POST">
                                <input type="submit" class="btn" value="Add to My Library">
                            </form>

                            <form>
                                <input type="submit" class="btn search-btn" value="Add to My Wish List">
                            </form>
                        </p>
                    </div>
            </div><hr>
        </div>
    <% }) %>

    <% } else { %>
<h1> Please search for something! </h1>
<% } %> 

<%- include('../partials/footer') %>
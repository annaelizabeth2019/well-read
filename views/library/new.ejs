<%- include('../partials/header') %>

<form id="add-book" action="/my-library" method="POST">
    <div class="form-group">
        <label>Title:</label>
        <input type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
        <label>Author:</label>
        <input type="text" class="form-control" name="author">
    </div>
    <div class="form-group">
        <label>Published:</label>
        <input type="year" class="form-control" name="published">
    </div>
    <div class="form-group"></div>
    <label>Cover URL:</label>
    <input type="text" class="form-control" name="cover">
    </div>
    <div class="form-group">
        <label>Notes:</label>
        <textarea class="form-control" name="notes" rows="3"></textarea>
        <small class="form-text text-muted">Feel free to include favorite quotes, themes, notes on when you read the piece, or whatever you like!</small>
    </div>
    <div class="form-group">
        <label>Have you finished this book?</label>
        <select name="finished" class="form-control">
            <option value="true">Yes, add it to my library!</option>
            <option value="false">Not yet, add it to my reading list.</option>
        </select>
    </div>
    <input type="submit" class="btn btn-dark" value="Add to My Library">

</form>

<%- include('../partials/footer') %>
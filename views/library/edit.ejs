<%- include('../partials/header') %>

<form id="edit-book" action="/my-library<%= book._id %>?_method=PUT" method="POST">

    <label>Title:</label>
    <input type="text" name="title">

    <label>Author:</label>
    <input type="text" name="author">

    <label>Published:</label>
    <input type="year" name="published">

    <label>Cover URL:</label>
    <input type="text" name="cover">

    <label>Have you finished this book?</label>
    <select name="finished">
        <option value="true">Yes, add it to my library!</option>
        <option value="false">Not yet, add it to my reading list.</option>
    </select>

    <input type="submit" value="Add to My Library">

</form>


<%- include('../partials/footer') %>